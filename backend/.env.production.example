# Production Environment Configuration
# Copy to .env.production and adjust values

# Database - Use PostgreSQL with SSL in production
# Example for cloud databases (Render, Railway, AWS RDS, etc.):
# DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require
#
# For local PostgreSQL with SSL:
# DATABASE_URL=postgresql://hackathon_user:hackathon_password@localhost:5432/hackathon_db?sslmode=require
#
# For databases that require certificate verification:
# DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=verify-full&sslrootcert=/path/to/root.crt

DATABASE_URL=postgresql://hackathon_user:hackathon_password@localhost:5432/hackathon_db?sslmode=require

# Set environment to production
ENVIRONMENT=production

# JWT - Use a strong secret key in production
SECRET_KEY=your-very-strong-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub OAuth - Use production credentials
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret
GITHUB_CALLBACK_URL=https://api.hackathonhub.oklabflensburg.de/api/auth/github/callback

# Google OAuth - Use production credentials
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_CALLBACK_URL=https://api.hackathonhub.oklabflensburg.de/api/auth/google/callback

# Frontend URL
FRONTEND_URL=https://hackathonhub.oklabflensburg.de

# SMTP Configuration for production
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Hackathon Hub
SMTP_FROM_EMAIL=noreply@hackathonhub.com
SMTP_TLS=true
SMTP_SSL=false

# Push Notifications (VAPID keys for web push)
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_PUBLIC_KEY=your-vapid-public-key-here

# Newsletter Configuration
NEWSLETTER_WELCOME_SUBJECT=Welcome to Hackathon Hub Newsletter!
NEWSLETTER_WELCOME_BODY=Thank you for subscribing to our newsletter.